<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:padding="10dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Firebase Realtime Database"
        android:textAlignment="center"
        android:textSize="10pt"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        android:visibility="visible"
        tools:viewBindingIgnore="true" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="NodeMCU ESP8266 IoT"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="10pt"
        android:layout_marginTop="30dp"
        android:visibility="visible"
        tools:viewBindingIgnore="true"  />

    <EditText
        android:id="@+id/temp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Temperature"
        android:textAlignment="center"
        android:textSize="10pt"
        android:visibility="visible"
        tools:viewBindingIgnore="true" />

    <EditText
        android:id="@+id/hum_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Humidity"
        android:layout_toEndOf="@id/getButton"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:textSize="10pt"
        android:visibility="visible"
        tools:viewBindingIgnore="true" />

    <EditText
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:ems="4"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="10pt"
        android:visibility="visible"
        tools:viewBindingIgnore="false" />

    <EditText
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@id/getButton"
        android:ems="4"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="10pt"
        android:visibility="visible"
        tools:viewBindingIgnore="false" />

    <EditText
        android:id="@+id/uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="23dp"
        android:text="uid"
        android:textSize="8pt"
        android:visibility="visible"
        tools:viewBindingIgnore="false" />

    <Button
        android:id="@+id/getButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_toEndOf="@id/temperature"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:text="GET" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="20dp"
        android:text="Logout"
        android:visibility="visible"
        tools:viewBindingIgnore="false" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPIO 16"
        android:textSize="8pt"
        android:textColor="@color/white"
        android:layout_toStartOf="@id/editText5"
        android:layout_marginRight="45dp"
        android:textAlignment="center"
        android:layout_marginTop="210dp"
        android:visibility="visible"
        tools:viewBindingIgnore="true" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="OFF"
        android:layout_toStartOf="@id/button2"
        android:layout_marginRight="25dp"
        android:visibility="visible"
        tools:viewBindingIgnore="false"/>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPIO 5"
        android:textSize="8pt"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="210dp"
        android:visibility="visible"
        tools:viewBindingIgnore="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:text="OFF"
        android:visibility="visible"
        tools:viewBindingIgnore="false"/>

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPIO 4"
        android:textSize="8pt"
        android:textColor="@color/white"
        android:layout_marginLeft="45dp"
        android:layout_toEndOf="@id/editText5"
        android:textAlignment="center"
        android:layout_marginTop="210dp"
        android:visibility="visible"
        tools:viewBindingIgnore="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_toEndOf="@id/button2"
        android:layout_marginStart="25dp"
        android:text="OFF"
        android:visibility="visible"
        tools:viewBindingIgnore="false"/>

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="50dp"
        android:layout_toStartOf="@id/editText8"
        android:text="GPIO 0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="8pt"
        android:visibility="visible"
        tools:viewBindingIgnore="true" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="35dp"
        android:layout_toStartOf="@id/button5"
        android:text="OFF"
        android:visibility="visible"
        tools:viewBindingIgnore="false" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPIO 2"
        android:textSize="8pt"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="310dp"
        android:visibility="visible"
        tools:viewBindingIgnore="true" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:text="OFF"
        android:visibility="visible"
        tools:viewBindingIgnore="false"/>

    <EditText
        android:id="@+id/editText9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPIO 14"
        android:textSize="8pt"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/editText8"
        android:layout_marginStart="40dp"
        android:textAlignment="center"
        android:layout_marginTop="310dp"
        android:visibility="visible"
        tools:viewBindingIgnore="true" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_toEndOf="@id/button5"
        android:layout_marginStart="25dp"
        android:text="OFF"
        android:visibility="visible"
        tools:viewBindingIgnore="false"/>
</RelativeLayout>
